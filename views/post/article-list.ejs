<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <%- include('../includes/nav.ejs') %>
    <div class="container-xxl">
        <main>
        <% if(articles.length > 0) { %>
            <% for(let article of articles) { %>
                <div class=" d-flex mb-5">
                <div class="container text-center">
                    <div class="row">
                    <article class="border p-3 mt-5 shadow-lg" style="width: max-content;">
                    <header>
                        <h1>
                            <%= article.title %>
                        </h1>
                    </header>
                    <div>
                        <img src="<%= article.imageUrl %>" alt="<%= article.title %>" width="40%">
                    </div>
                    <div>
                        <p><%= article.description %></p>
                    </div>
                    <div>
                        <div>
                            <a href="/posts/<%= article._id %>" class="btn btn-secondary text-white">Read more</a>
                       </div>
                       <div class="d-flex justify-content-end">
                           <a href="/edit-post/<%= article._id %>?edit=true" class="btn btn-secondary text-white" style="margin-right:1rem ;"><i class="fas fa-edit"></i></a>
                        <form action="/delete-post" method="post">
                            <input type="hidden" name="postId" value="<%= article._id %>"/>
                            <a class="btn btn-danger text-white" href="#" onclick="this.closest('form').submit();return false;" ><i class="fas fa-trash-alt"></i></a>
                        </form>
                    </div>
                    </div>
                </article>
                </div>
                </div>
            </div>

            <% } %>
        <% } else { %>
            <h1>No Articles Found</h1>
        <% } %>
    </main>
</div>

    <%- include('../includes/end.ejs') %>