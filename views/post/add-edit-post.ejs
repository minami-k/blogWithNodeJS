<body>
    <%- include('../includes/nav.ejs')%>
<!--     <h1>Editing mode: <%= editing %></h1>
 -->    <main>
        <form action="<% if(editing) { %>/author/edit-post<% }else{ %>/author/add-post<% } %>" method="post" class="box my-5 container">
            <div class="field">
                <label for="title" class="label">Title</label>
                <input  type="text" name="title" value="<% if(editing) { %><%= article.title %><% } %>" class="input"/>
            </div>

            <div class="field">
                <label for="title" class="label">Image URL</label>
                <input type="text" name="imageUrl"  value="<% if(editing) { %><%= article.imageUrl %><% } %>" class="input"/>
            </div>
            <div class="field">
                <label for="title" class="label">Description</label>
                <textarea class="textarea" name="description" rows="10"><% if(editing) { %><%= article.description %><% } %></textarea>
            </div>

            <% if(editing) { %>
                <input type="hidden" value="<%= article._id %>" name="postId"/>
            <% } %>


            <button type="submit" class="button is-dark is-hovered">
                <% if(editing) { %>
                    Edit
                <% }else{ %>
                    Add
                <% } %> 
            </button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>